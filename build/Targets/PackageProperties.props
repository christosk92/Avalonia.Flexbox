<Project>

    <PropertyGroup>
        <PackageVersion Condition="'$(PackageVersionSuffix)' != ''">$(PackageVersion)$(PackageVersionSuffix)</PackageVersion>
    </PropertyGroup>

    <PropertyGroup>
        <BaseDescription>Avalonia.Flexbox is a flexbox implementation for Avalonia.</BaseDescription>
    </PropertyGroup>
    
    <PropertyGroup>
        <Authors>jp2masa</Authors>
        <Copyright>Copyright Â© $([System.DateTime]::Now.Year) jp2masa</Copyright>
        <PackageIcon>Icon.png</PackageIcon>
        <PackageProjectUrl>http://github.com/jp2masa/Avalonia.Flexbox</PackageProjectUrl>
        <PackageLicenseExpression>MIT</PackageLicenseExpression>
        <PackageRequireLicenseAcceptance>True</PackageRequireLicenseAcceptance>
        <PackageTags>flex flexbox avalonia css dotnet core csharp vb visual basic fsharp</PackageTags>
        <RepositoryType>git</RepositoryType>
        <RepositoryUrl>https://github.com/jp2masa/Avalonia.Flexbox</RepositoryUrl>
    </PropertyGroup>

    <ItemGroup>
        <None Include="$(RepoRoot)\Icon.png" Pack="True" PackagePath="/" Visible="False" />
    </ItemGroup>

</Project>
